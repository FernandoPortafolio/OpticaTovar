<html lang="fr">

  <head>
    <meta charset="UTF-8">
    <title>Error 404</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/snap.svg/0.3.0/snap.svg-min.js"></script>
    <style>
      body {
        background: #ececec;
      }

      #error {
        margin: 0 auto;
        display: block;
      }
    </style>
  </head>

  <body>
    {{{body}}}
  </body>

  <script>
    window.onload = function () {

      var error = Snap.select("#error"),
        hole = Snap.select("#svg-hole"),
        hand = Snap.select("#svg-hand"),
        mask = Snap.select("#svg-mask");


      function onSVGLoaded() {

        function animOn() {
          hand.animate({
            transform: "t10,-300, r0"
          }, 4500, mina.easeinout, animOut);

          mask.animate({
            transform: "t-10,300, r0"
          }, 4500, mina.easeinout);
        }

        function animOut() {
          hand.animate({
            transform: "t-10,-305, r0"
          }, 4500, mina.easeinout, animOn);

          mask.animate({
            transform: "t10,305, r0"
          }, 4500, mina.easeinout);
        };

        function open() {
          clearTimeout(timer);
          hand.animate({
            transform: "t0,-300"
          }, 800, mina.backout, animOn);

          mask.animate({
            transform: "t0,300"
          }, 800, mina.backout);

        }
        timer = setTimeout(open, 1000);

        hand.attr({
          mask: mask
        });
      }

      onSVGLoaded();
    };
  </script>

</html>