<h3 class="mb-4">
  {{title}}
</h3>

<div class="row">
  <div class="col-md-12">
    <!-- Formulario de Proveedor -->
    <div class="card card-primary">
      <div class="card-header">
        <h4 class="card-title">Llena los datos del tipo de armazón</h4>
      </div>
      <!-- /.card-header -->
      <!-- form start -->
      <form action="{{route}}" method="POST">
        <div class="card-body">
          <div class="form-group">
            <label for="tipo_armazon">Tipo de Armazón</label>
            <input type="text" class="form-control" id="tipo_armazon" name="tipo_armazon" value="{{tipo_armazon.tipo_armazon}}" autofocus required>
          </div>
        </div>
        <!-- /.card-body -->

        {{#if tipo_armazon}}
          <input type="hidden" value="{{tipo_armazon.id_tipo_armazon}}" name="id_tipo_armazon">
        {{/if}}
        <div class="card-footer">
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      </form>
      <!-- Form end -->

    </div>
    <!-- /.card -->
  </div>
</div>