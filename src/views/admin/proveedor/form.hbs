<h3 class="mb-4">
  {{title}}
</h3>

<div class="row">
  <div class="col-md-12">
    <!-- Formulario de Proveedor -->
    <div class="card card-primary">
      <div class="card-header">
        <h4 class="card-title">Llena los datos del proveedor</h4>
      </div>
      <!-- /.card-header -->
      <!-- form start -->
      <form action="{{route}}" method="POST">
        <div class="card-body">
          <div class="form-group">
            <label for="razon_social">Razon Social</label>
            <input type="text" class="form-control" id="razon_social" name="razon_social" value="{{proveedor.razon_social}}" required>
          </div>
          <div class="form-group">
            <label for="rfc">RFC</label>
            <input type="text" class="form-control" id="rfc" name="rfc" maxlength="13" value="{{proveedor.rfc}}" required>
          </div>
          <div class="form-group">
            <label for="domicilio">Domicilio</label>
            <input type="text" class="form-control" id="domicilio" name="domicilio" value="{{proveedor.domicilio}}" required>
          </div>
          <div class="form-group">
            <label for="telefono">Telefono</label>
            <input type="tel" class="form-control" id="telefono" name="telefono" value="{{proveedor.telefono}}" maxlength="10">
          </div>
        </div>
        <!-- /.card-body -->

        {{#if proveedor}}
          <input type="hidden" value="{{proveedor.id_proveedor}}" name="id_proveedor">
        {{/if}}
        <div class="card-footer">
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      </form>
      <!-- Form end -->

    </div>
    <!-- /.card -->
  </div>
</div>