<h3 class="mb-4">Ventas</h3>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">En esta página encontrarás la informacón de todas las ventas realizadas</h3>
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <table id="tabla" class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID Venta</th>
              <th>Fecha</th>
              <th>Cliente</th>
              <th>Status</th>
              <th>Tipo</th>
              <th>
                <!--acciones-->
              </th>
            </tr>
          </thead>
          <tbody>

            {{#each ventas}}
              <tr>
                <td>
                  {{this.id_venta}}
                </td>
                <td>
                  {{formatDate this.fecha}}
                </td>
                <td>
                  <a href="/admin/clientes/editar?id_cliente={{this.id_cliente}}">
                    {{this.cliente}}
                  </a>
                </td>
                <td>
                  {{this.status}}
                </td>
                <td>
                  {{this.tipo}}
                </td>
                <td class="text-center">
                  <a href="/admin/ventas/eliminar?id_venta={{this.id_venta}}" class='btn btn-sm btn-danger' role='button'><i class="fas fa-trash-alt"></i></a>
                  <a href="/admin/ventas/editar?id_venta={{this.id_venta}}" class='btn btn-sm btn-secondary' role='button'><i class="far fa-edit"></i></a>
                </td>
              </tr>
            {{/each}}

          </tbody>
          <tfoot>
            <tr>
              <th>ID Venta</th>
              <th>Fecha</th>
              <th>Cliente</th>
              <th>Status</th>
              <th>Tipo</th>
              <th>
                <!--acciones-->
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->

  </div>
</div>