<h3 class="mb-4">
  {{title}}
</h3>

<div class="row">
  <div class="col-md-12">
    <!-- Formulario de Proveedor -->
    <div class="card card-primary">
      <div class="card-header">
        <h4 class="card-title">Llena los datos de la forma</h4>
      </div>
      <!-- /.card-header -->
      <!-- form start -->
      <form action="{{route}}" method="POST">
        <div class="card-body">
          <div class="form-group">
            <label for="forma">Forma</label>
            <input type="text" class="form-control" id="forma" name="forma" value="{{forma.forma}}" autofocus required>
          </div>
        </div>
        <!-- /.card-body -->

        {{#if forma}}
          <input type="hidden" value="{{forma.id_forma}}" name="id_forma">
        {{/if}}
        <div class="card-footer">
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      </form>
      <!-- Form end -->

    </div>
    <!-- /.card -->
  </div>
</div>