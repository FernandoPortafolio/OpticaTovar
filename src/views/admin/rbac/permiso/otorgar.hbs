<h3 class="mb-4">
  Otorgar un permiso
</h3>

<div class="row">
  <div class="col-md-12">
    <!-- Formulario de Proveedor -->
    <div class="card card-primary">
      <div class="card-header">
        <h4 class="card-title">Elige el Rol y el Permiso que deseas asignarle a ese Rol</h4>
      </div>
      <!-- /.card-header -->
      <!-- form start -->
      <form action={{route}} method="POST">

        <div class="card-body">
          <div class="form-group">
            <label for="rol">Rol</label>
            <select name="id_rol" id="rol" class="form-control">
              {{#each roles}}
                <option value="{{this.id_rol}}">
                  {{this.rol}}
                </option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label for="permiso">Permiso a Asignar</label>
            <select name="id_permiso" id="permiso" class="form-control">
              {{#each permisos}}
                <option value="{{this.id_permiso}}">
                  {{this.permiso}}
                </option>
              {{/each}}
            </select>
          </div>

          <button type="submit" class="btn btn-primary">
            Guardar
          </button>
        </div>
      </form>
      <!-- Form end -->
    </div>
    <!-- /.card -->
  </div>
</div>